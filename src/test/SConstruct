Import('env')

# Build a modified Nebula lib
lib_name='nebula_core_test'

# Sources to generate the library
source_files=[
    'Nebula.cc',
    'NebulaTest.cc'
]

# Build library
env.StaticLibrary(lib_name, source_files)

# Build a modified Nebula lib
lib_name='nebula_test_common'

